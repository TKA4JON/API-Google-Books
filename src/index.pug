doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Bookshop
    link(rel='stylesheet' href=require('./sass/style.scss'))
  body
    a.promo_1(href='#')
      div CHANGE OLD BOOK ON NEW
      img(src=require('./img/arrow.svg') alt='arrow.svg')
    a.promo_2(href='#')
      div TOP 100 BOOKS 2022
      img(src=require('./img/arrow.svg') alt='arrow.svg')
    .wrapper
      header.header
        a.header__logo(href='#') Bookshop
        nav.header__menu
          a.header__menu-element(href='#') BOOKS
          a.header__menu-element(href='#') AUDIOBOOKS
          a.header__menu-element(href='#') STATIONERY &amp; GIFTS
          a.header__menu-element(href='#') BLOG
        .header__icon
          a.header__icon-element(href='#' title='User')
            img(src=require('./img/user.svg') alt='user.svg')
          a.header__icon-element(href='#' title='Search')
            img(src=require('./img/search.svg') alt='search.svg')
          a.header__icon-element.header__icon-element-cart(href='#' title='Shopping cart')
            img(src=require('./img/shop bag.svg') alt='shop bag.svg')
        .header__inTheCartIndex
      .banner
        img.banner-elem(src=require('./img/banner_1.png') alt='bunnerFile.png')
      .banner__buttons
        .bunner__buttons-element(style='background:#9E98DC')
        .bunner__buttons-element
        .bunner__buttons-element
      .categories
        button.categories__element.categories__element_active(data-category='Architecture')
          .categories__element_ring(data-category='Architecture' style='background:#756AD3')
          div Architecture
        button.categories__element(data-category='Art')
          .categories__element_ring(data-category='Art' style='background: #EFEEF6')
          div Art &amp; Fashion
        button.categories__element(data-category='Biography&Autobiography')
          .categories__element_ring(data-category='Biography&Autobiography' style='background: #EFEEF6')
          div Biography
        button.categories__element(data-category='Business')
