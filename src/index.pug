          div Business
        button.categories__element(data-category='Crafts&Hobbies')
          .categories__element_ring(data-category='Crafts&Hobbies' style='background: #EFEEF6')
          div Crafts &amp; Hobbies
        button.categories__element(data-category='Drama')
          .categories__element_ring(data-category='Drama' style='background: #EFEEF6')
          div Drama
        button.categories__element(data-category='Fiction')
